doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width,initial-scale=1")
        script(src="https://cdn.tailwindcss.com")
        block css
        script.
            tailwind.config = {
                theme: {
                    extend: {
                        colors: {
                            clifford: '#da373d',
                        }
                    }
                }
            }
        block title
    body
        .min-h-full
            block linklist
            header.bg-white.shadow
                div(class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8")
                    block sarlavha
            main
            div(class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8")
                block content